# Chatwoot-Langchain Environment Configuration

# API Configuration
# Use either OpenAI or Deepseek (set one to true, the other to false)
OPENAI_API=false
DEEPSEEK_API=true

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Deepseek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# Application Configuration
TEST_MODE=false
PORT=8080
DEBUG=false
LOG_LEVEL=INFO

# ERPNext Configuration
ERPNEXT_API_KEY=your_erpnext_username
ERPNEXT_API_SECRET=your_erpnext_password
ERPNEXT_BASE_URL=https://your-erpnext-instance.com

# Splynx Configuration
SPLYNX_API_KEY=your_splynx_api_key
SPLYNX_API_SECRET=your_splynx_api_secret
SPLYNX_BASE_URL=https://your-splynx-instance.com

# UNMS Configuration
UNMS_API_KEY=your_unms_api_key
UNMS_BASE_URL=https://your-unms-instance.com

# Chatwoot Configuration
CHATWOOT_BASE_URL=https://app.chatwoot.com
CHATWOOT_API_ACCESS_TOKEN=your_chatwoot_api_token_here
CHATWOOT_ACCOUNT_ID=1
CHATWOOT_INBOX_ID=1

# Cache Configuration
CACHE_SEMANTIC_RESPONSES=true
CACHE_TTL=86400

# Feature Flags
ENABLE_SEMANTIC_CACHE=true
ENABLE_METRICS=true

# Performance Testing (optional)
PERF_TEST_RUNS=100
PERF_TEST_THREADS=10
