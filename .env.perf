# Performance testing environment configuration
# Copy this file and add your actual API keys

# OpenAI API configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# ERPNext API configuration
ERPNEXT_API_URL=https://erp.example.com/api
ERPNEXT_API_KEY=your_erpnext_api_key
ERPNEXT_API_SECRET=your_erpnext_api_secret

# Splynx API configuration
SPLYNX_API_URL=https://splynx.example.com/api
SPLYNX_API_KEY=your_splynx_api_key
SPLYNX_API_SECRET=your_splynx_api_secret

# UNMS API configuration
UNMS_API_URL=https://unms.example.com/api
UNMS_API_KEY=your_unms_api_key

# Chatwoot API configuration
CHATWOOT_API_URL=https://chatwoot.example.com/api
CHATWOOT_API_KEY=your_chatwoot_api_key

# Performance testing specific settings
LOG_LEVEL=INFO
PERFORMANCE_MONITORING=true
ENABLE_PROMETHEUS_METRICS=true
ENABLE_REQUEST_TRACING=true

# Set to true to use mock responses for external APIs during performance testing
USE_MOCK_RESPONSES=true
